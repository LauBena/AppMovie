@model IEnumerable<AppMovie.Models.Gender>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Crear Nuevo Genero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenderName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GenderID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.GenderID">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.GenderID">Eliminar</a> |
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
