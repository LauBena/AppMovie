@model IEnumerable<AppMovie.Models.Producer>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="create-link" asp-action="Create">Crear Nueva Productora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProducerID">Editar</a> |
                <a onclick="eliminarProductora(@item.ProducerID)" class="btn-delete">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
function eliminarProductora(id){
    var eliminar = confirm("Esta seguro que desea eliminar esta seccion?");
    if(eliminar){
        location.href = "../../Producers/DeleteConfirmed/" + id;
    }
}
</script>
</body>
</html>
