@model IEnumerable<AppMovie.Models.Producer>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProducerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProducerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProducerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
