@model IEnumerable<AppMovie.Models.Producer>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="create-link" asp-action="Create">Crear Productora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProducerID" class="btn-edit">Editar</a> |
                <a onclick="eliminarProductora(@item.ProducerID)" class="btn-delete">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
function eliminarProductora(id){
    var eliminar = Swal.fire({
            title: 'Estas seguro?',
            text: "No podras revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, borralo!'
            }).then((result) => {
            if (result.isConfirmed) {
            Swal.fire(
            'Eliminado!',
            'La productora ha sido eliminada.',
            'success'
            )
            function redirigir(){
            location.href = "../../Producers/DeleteConfirmed/" + id;
            }

            setTimeout(redirigir, 2000);

            }
    })
}
</script>
</body>
</html>
