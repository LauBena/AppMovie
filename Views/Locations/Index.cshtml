@model IEnumerable<AppMovie.Models.Location>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado de Locaciones</title>
</head>
<body>
<p>
    <a asp-action="Create">Nueva Localidad</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries.CountryName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.CountryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocationID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.LocationID">Detalles</a> |
                <a onclick="eliminarSeccion(@item.LocationID);" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function eliminarSeccion(id){
        var eliminar = confirm("Esta seguro que desea eliminar esta seccion?");
        if(eliminar){
            location.href = "../../Locations/DeleteConfirmed/" + id;
        }
    }
</script>
</body>
</html>
