@model IEnumerable<AppMovie.Models.Movie>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Nueva Pel√≠cula</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.SectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender.GenderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.ProducerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MovieID">Detalles</a> |
                <a onclick="eliminarSeccion(@item.MovieID);" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function eliminarSeccion(id){
        var eliminar = confirm("Esta seguro que desea eliminar esta seccion?");
        if(eliminar){
            location.href = "../../Movies/DeleteConfirmed/" + id;
        }
    }
</script>
</body>
</html>
