@model IEnumerable<AppMovie.Models.Rental>

@{

    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <p>
        <a class="create-link" asp-action="Create">Crear Nuevo Alquiler</a>
    </p>
    <div class="container-box">
        <div class="container-scroll">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RentalDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Partner)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RentalDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partner.PartnerName)
                            </td>
                            <td>
                                <a class="button-Detalles" asp-action="Details" asp-route-id="@item.RentalID">
                                    <span>Detalle del alquiler</span>
                                    </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function eliminarRental(id) {
            var eliminar = Swal.fire({
                title: 'Estas seguro?',
                text: "No podras revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, borralo!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Eliminado!',
                        'El alquiler ha sido eliminado.',
                        'success'
                    )
                    function redirigir() {
                        location.href = "../../Rentals/DeleteConfirmed/" + id;
                    }

                    setTimeout(redirigir, 2000);

                }
            })
        }
    </script>
</body>

</html>
